<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
                name="listing[title]" 
                placeholder="Add a catchy title" 
                type="text" 
                class="form-control"
                required
            >
            <div class="valid-feedback"> Title looks good! </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description about 50-100 words</label>
            <textarea 
            name="listing[description]" 
            placeholder="Enter description"
            class="form-control"
            required
            oninput="autoResize(this)"
            ></textarea>
            <div class="invalid-feedback"> Please enter description </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" type="file" class="form-control">
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Select Category</label>
            <select 
                name="listing[category]" 
                id="category" 
                class="form-select" 
                required
            >
                <option value="" selected disabled>-- Choose a category --</option>
                <option value="Cities">Cities</option>
                <option value="Mountains">Mountains</option>
                <option value="Beaches">Beaches</option>
                <option value="Pools">Pools</option>
                <option value="Farms">Farms</option>
                <option value="Resorts">Resorts</option>
                <option value="Forests">Forests</option>
                <option value="Heritage">Heritage</option>
                <option value="Arctic">Arctic</option>
                <option value="Premium">Premium</option>
                <option value="Others">Others</option>
            </select>
            <div class="invalid-feedback">Please select a category</div>
        </div>


        <div class="row">
            <div class="mb-3 col-md-4"> 
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter price" class="form-control" required> <!-- removed type=number to check error-->
                <div class="invalid-feedback"> Price should be valid </div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required>
                <div class="invalid-feedback"> Country name should be valid </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
            <div class="invalid-feedback"> Location should be valid </div>
        </div>

        <div class="mb-3">
            <label for="usp1" class="form-label">USP 1</label>
            <input 
                name="listing[usp1]" 
                placeholder="Add your first USP" 
                type="text" 
                class="form-control"
                required
            >
        </div>

        <div class="mb-3">
            <label for="usp2" class="form-label">USP 2</label>
            <input 
                name="listing[usp2]" 
                placeholder="Add your second USP" 
                type="text" 
                class="form-control"
                required
            >
        </div>

        <div class="mb-3">
            <label for="usp3" class="form-label">USP 3</label>
            <input 
                name="listing[usp3]" 
                placeholder="Add your third USP" 
                type="text" 
                class="form-control"
                required
            >
        </div>

        <div class="row">
            <div class="mb-3 col-md-6"> 
                <label for="guests" class="form-label">Guests</label>
                <input name="listing[guests]" placeholder="Enter number of guests" class="form-control" required> <!-- removed type=number to check error-->
                <div class="invalid-feedback"> Please enter number of guests </div>
            </div>

            <div class="mb-3 col-md-6">
                <label for="bedrooms" class="form-label">Bedrooms</label>
                <input name="listing[bedrooms]" placeholder="Enter number of bedrooms" class="form-control" required>
                <div class="invalid-feedback"> Please enter number of bedrooms </div>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6"> 
                <label for="beds" class="form-label">Beds</label>
                <input name="listing[beds]" placeholder="Enter number of beds" class="form-control" required> <!-- removed type=number to check error-->
                <div class="invalid-feedback"> Please enter number of beds </div>
            </div>

            <div class="mb-3 col-md-6">
                <label for="bathroom" class="form-label">Bathrooms</label>
                <input name="listing[bathroom]" placeholder="Enter number of bathrooms" class="form-control" required>
                <div class="invalid-feedback"> Please enter number of bathrooms </div>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="checkin" class="form-label">Check-In Time</label>
                <input 
                    type="time" 
                    id="checkin" 
                    name="listing[checkin]" 
                    class="form-control" 
                    required 
                    pattern="[0-2][0-9]:[0-5][0-9]"
                >
                <div class="invalid-feedback">Please enter a valid check-in time.</div>
            </div>

            <div class="mb-3 col-md-6">
                <label for="checkout" class="form-label">Check-Out Time</label>
                <input 
                    type="time" 
                    id="checkout" 
                    name="listing[checkout]" 
                    class="form-control" 
                    required 
                    pattern="[0-2][0-9]:[0-5][0-9]"
                >
                <div class="invalid-feedback">Please enter a valid check-out time.</div>
            </div>
        </div>

        <button class="btn btn-dark add-btn mt-3"> Add </button>
        <br><br>
    </form>
    </div>
</div>

<script>
  function autoResize(textarea) {
    textarea.style.height = 'auto';
    textarea.style.height = textarea.scrollHeight + 'px';
  }
</script>
<!-- 3rd code -->

<% layout("/layouts/boilerplate") %>
<div class="page-content">

<div class="listing-container">

    <% 
        let total = 0;
        listing.reviews.forEach(r => { total += r.rating });
        let avgRating = listing.reviews.length > 0 ? (total / listing.reviews.length).toFixed(1) : "No ratings yet";
    %>

    <!-- Title Centered -->
        <div class="text-center mb-4">
            <h3><%= listing.title %> </h3>
        </div>

    

    <!-- Card Layout -->
    <div class="listing-card-box">

        <div class="row">
        
            <!-- LEFT SECTION -->
            <div class="col-md-6">
                <img src="<%= listing.image.url %>" class="listing-img shadow-sm">

                <!-- Owner & Category -->
                <div class="row mt-3">
                    <div class="col-6 text-start">
                        <strong>Owner:</strong> <%= listing.owner.username %>
                    </div>
                    <div class="col-6 text-end">
                        <strong>Rating:</strong> <%= avgRating %>
                    </div>
                </div>

                <!-- Description -->
                <p class="mt-3" style="font-size:1.1rem; line-height: 1.5;">
                    <%= listing.description %>
                </p>

                <!-- If owner logged in -->
                <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="d-flex gap-3 mt-3">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4">Edit</a>

                        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                            <button class="btn btn-danger px-4">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>

            <!-- RIGHT SECTION -->
            <div class="col-md-6">
                <div class="detail-box shadow-sm">

                    <p><i class="fa-solid fa-tag me-2"></i><b> â‚¹<%= listing.price.toLocaleString("en-IN") %> for 1 night</b></p>
                    <p><i class="fa-solid fa-location-dot me-2"></i><b> <%= listing.location %></b></p>

                    <p><i class="fa-solid fa-fire me-2"></i> <b><%= listing.usp1 %></b></p>
                    <p><i class="fa-solid fa-fire me-2"></i> <b><%= listing.usp2 %></b></p>
                    <p><i class="fa-solid fa-fire me-2"></i> <b><%= listing.usp3 %></b></p>

                    <hr>

                    <p><strong>Guests:</strong> <%= listing.guests %></p>
                    <p><strong>Bedrooms:</strong> <%= listing.bedrooms %></p>
                    <p><strong>Bathrooms:</strong> <%= listing.bathroom %></p>
                    <p><strong>Check-in:</strong> <%= listing.checkin %></p>
                    <p><strong>Check-out:</strong> <%= listing.checkout %></p>

                </div>

                <% if(currUser) { %>

                <div class="d-flex justify-content-center gap-3 mt-3">
                    <a href="" class="btn btn-reserve btn-lg px-5">Reserve</a>
                </div>
                
                <% } %>

            </div>
        </div>
    </div>
</div>
   
    <div class="col-8 offset-2 mb-3">
        <hr>
        <% if(currUser) { %>
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label fw-bold">Rating</label>

            <!-- Hidden input that stores the actual value -->
            <input type="hidden" name="review[rating]" id="ratingValue" required>

            <div class="rating-container d-flex gap-2">
            <i class="fa-solid fa-star" data-value="1"></i>
            <i class="fa-solid fa-star" data-value="2"></i>
            <i class="fa-solid fa-star" data-value="3"></i>
            <i class="fa-solid fa-star" data-value="4"></i>
            <i class="fa-solid fa-star" data-value="5"></i>
            </div>
            <div class="invalid-feedback">Please select a rating</div>
        </div>

        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for review</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
        </form>

        <hr>


        <% } %>   

        <div class="d-flex justify-content-between align-items-center mb-2">
            <p class="mb-0"><b>All Reviews</b></p>

            <p class="mb-0">
                <i class="fa-solid fa-star avg-star"></i> <%= avgRating %> 
                (<%= listing.reviews.length %> reviews)
            </p>
        </div>
        <div class="row">
        <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-5 mb-3">
                <div class="card-body">

                <% if(currUser) { %>
                    <div class="dropdown position-absolute top-0 end-0 m-2">
                        <a class="text-dark" href="#" role="button" id="dropdownMenu<%= review._id %>" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-ellipsis"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenu<%= review._id %>">
                            <li>
                                <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                    <button class="dropdown-item text-danger">Delete</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                <% } %>

                    <h6 class="card-title mt-2">@<%= review.author.username %>   </h6>
                    <div class="text-warning">
                    <% for(let i = 1; i <= 5; i++) { %>
                        <% if (i <= review.rating) { %>
                        <i class="fa-solid fa-star rating-star"></i>
                        <% } else { %>
                        <i class="fa-regular fa-star rating-star"></i>
                        <% } %>
                    <% } %>
                    </div>


                    <p class="card-text"> <%= review.comment %> </p>
                    <p class="text-muted" style="font-size: 0.7rem;">
                        <%= new Date(review.createdAt).toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %>
                    </p>
                </div>
            </div>
        <% } %>
        </div>
    </div>
</div>

